root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 100

[Makefile]
indent_style = tab
indent_size = 4

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.toml]
indent_size = 2

[*.rs]
indent_size = 4

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
